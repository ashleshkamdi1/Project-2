#include<iostream>
using namespace std;
int main()
{
    int age;
    cout<<" Enter your age:  ";
    cin>>age;
    if(age>=18)
    { 
        cout<<"You are eligible for voting.";
    }    
    else
    {

        cout<<" You can't vote now."<<"\n You seems to be a TEENAGER";
        cout<<",you have to wait for more "<<18-age<<" years from now to vote." ;
    }

    
    
    return 0;
}
